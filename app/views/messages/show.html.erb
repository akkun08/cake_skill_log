<h1>チャットルームだよ</h1>

<%= form_with model: @message, local: true do |f| %>
<%= f.text_field :content %>
<%= f.hidden_field :room_id %>
<%= f.submit '送信する' %>
<% end %>

<div>
  <% @messages.each do |message| %>
  <div>
    <%= message.user.name %>
    <%= message.content %>
    <% end %>
  </div>
</div>