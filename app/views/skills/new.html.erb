<%= form_with model: @skill, url:skills_path, local: true do |f| %>
<div class="skill-box">
  <h2>スキルを投稿する</h2>
  <%= f.file_field :image, id:"skill-image" %>
  <%= f.collection_select(:category_id, Category.all,:id, :name,{},{class:"category-select"}) %>
  <%= f.text_field :name, class:"skill-name",placeholder:"タイトル名" %>
  <%= f.text_area :formulation_text, class:"skill-formulation", placeholder:"配合" %>
  <%= f.text_area :recipe_text, class:"skill-recipe"  %>
  <%= f.submit "投稿する", class:"btn" %>
</div>
<% end %>