<h1 class="cakelog2"><%= link_to "CakeLog" ,root_path, class: "cakelog2" %></h1>
<section class="login">
  <div class="login1">
    <div class="login2">
      <h2>ログイン</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%# ログイン時のエラーメッセージ  %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class="field">
      <p>Eメール</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <p>パスワード</p>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>



    <div class="actions">
      <%= f.submit "ログイン", class:"btn"  %>
    </div>
    <% end %>
  </div>
</section>
<%= render "shared/footer" %>